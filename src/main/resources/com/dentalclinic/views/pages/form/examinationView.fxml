            <Label text="Số điện thoại" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="phoneField" editable="false" promptText="Nhập số điện thoại" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         </children>
